The Raw Code 
#start coding... 
name <- c("Doris", "Carol", "Angitha","Peace", "Akshar")
slack_name <- c("DNA", "Love", "Angi", "Dove", "Kumar")
country <- c("Nigeria", "Nigeria", "Pakistan","Nigeria", "India")
email <- c("dorisnnenna2016@gmail.com", "carol@gmail.com", "Angitha@gmail.com", "Peace@gmail.com", "kumar@gmail.com")

hobby <- c("traveling", "reading", "cooking", "singing", "dancing")
discipline <- ("Biochemistry", "Biological Sciences", "Chemistry", "Biomedical Sciences", "Biophysics")
preferred_lang <- c("R", "Python", "Python", "R", "Python")

#create the dataframe
team_info <- data.frame(name, slack_name, country, email, hobby, discipline, preferred_lang)
print(team_info)








